{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
            "./types.d.ts"
        ],
        "outDir": "build",
        "target": "ESNext",
        "module": "ESNext",
        "sourceMap": false,
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@type": [
                "types.d.ts"
            ],
            "@env": [
                "envConfig.ts"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "server.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}